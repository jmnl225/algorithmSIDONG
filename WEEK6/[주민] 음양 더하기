class Solution {
    private int sol=0;
    public int solution(int[] absolutes, boolean[] signs) {
        int answer = 0;
        for(int i=0; i<absolutes.length; i++){
            if(signs[i]){
                sol = sol+absolutes[i];
            }else{
                sol = sol-absolutes[i];
            }
        }
        return sol;
    }
}
